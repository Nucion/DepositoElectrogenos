<form action="/Buy/<%= productId%>" method="post">
    <div class="mb-3">
        <label for="Amount" class="form-label">Monto</label>
        <input type="number" class="form-control" id="Amount" name="monto">
    </div>
    <div class="mb-3">
        <label for="Discount" class="form-label">Descuento (%)</label>
        <input type="number" class="form-control" id="Discount" name="descuento">
    </div>
    <button type="submit" class="btn btn-primary">Finalizado</button>
</form>

